head
  link(href='/stylesheets/bootstrap.css', rel='stylesheet')
  link(href='/stylesheets/style.css', rel='stylesheet')
body(style='padding-top:90px')
  .container
    nav.navbar.navbar-expand-md.navbar-light.bg-light.fixed-top
      a.navbar-brand(href='#') NodeAuth
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
         if user
           li(class=(title =='Members' ? 'active' : ''))
             a.nav-link(href='/')
               | Members
               span.sr-only (current)
          if !user
           li(class=(title =='Register' ? 'active' : ''))
             a.nav-link(href='/users/register') Register
           li(class=(title =='Login' ? 'active' : ''))
             a.nav-link(href='/users/login') Login
        ul.navbar-nav.nav-right
          if user
           li.nav-item
             a.nav-link(href='/users/logout') Logout

  .container
   !=messages()
   block content
script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
script(src='https://unpkg.com/popper.js')
script(src='/javascripts/bootstrap.js')
